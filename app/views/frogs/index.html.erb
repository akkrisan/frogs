<p id="notice"><%= notice %></p>

<h1>Listing Frogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frogs.each do |frog| %>
      <tr>
        <td><%= link_to frog.name, frog %></td>
        <td><%= frog.description %></td>
        <td><%= frog.picture %></td>
        <td><%= link_to 'Show', frog %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_frog_path(frog) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', frog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

